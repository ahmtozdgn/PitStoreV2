@model PitStore.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title mb-4">Order Confirmed!</h1>
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h4>Thank you for your order!</h4>
                    <p class="text-muted">Your order has been successfully placed.</p>
                    <div class="mt-4">
                        <p><strong>Order Number:</strong> #@Model.Id</p>
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</p>
                        <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("F2")</p>
                    </div>
                    <div class="mt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary me-2">View Order Details</a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 