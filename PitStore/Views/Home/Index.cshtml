@model IEnumerable<PitStore.Models.Product>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid px-0">
    <!-- F1 Hero Slider -->
    <div id="f1HeroCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
