@{
    ViewData["Title"] = "İletişim";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center mb-4">İletişim</h1>
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">Bize Ulaşın</h2>
                    <p class="lead">
                        Ürünlerimiz, siparişleriniz veya Formula 1 ile ilgili her türlü sorunuz için bize ulaşabilirsiniz.
                    </p>
                    
                    <form asp-action="Contact" method="post" class="mt-4">
                        <div class="mb-3">
                            <label for="name" class="form-label">Adınız</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="subject" class="form-label">Konu</label>
                            <select class="form-select" id="subject" name="subject" required>
                                <option value="">Konu Seçiniz</option>
                                <option value="order">Sipariş Sorgusu</option>
                                <option value="product">Ürün Bilgisi</option>
                                <option value="shipping">Kargo & Teslimat</option>
                                <option value="returns">İade & Değişim</option>
                                <option value="other">Diğer</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="message" class="form-label">Mesajınız</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Mesajı Gönder</button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-3">Diğer İletişim Kanalları</h2>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="h5">Müşteri Hizmetleri</h3>
                            <p>
                                <i class="fas fa-phone me-2"></i> +90 555 123 4567<br>
                                <i class="fas fa-envelope me-2"></i> destek@pitstore.com
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h3 class="h5">Çalışma Saatleri</h3>
                            <p>
                                Pazartesi - Cuma: 09:00 - 18:00<br>
                                Cumartesi: 10:00 - 16:00<br>
                                Pazar: Kapalı
                            </p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h3 class="h5">Bizi Takip Edin</h3>
                        <div class="social-links">
                            <a href="#" class="me-3"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="me-3"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 