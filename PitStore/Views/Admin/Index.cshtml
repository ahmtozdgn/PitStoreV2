@model PitStore.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Paneli";
}
<div class="container-fluid admin-panel mt-4">
    <h1 class="mb-4">Admin Paneli</h1>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Ürün</h5>
                    <p class="card-text display-6">@Model.TotalProducts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Sipariş</h5>
                    <p class="card-text display-6">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kullanıcı</h5>
                    <p class="card-text display-6">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Gelir</h5>
                    <p class="card-text display-6">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">Son Siparişler</div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Tarih</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.User?.UserName</td>
                                <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>@order.OrderStatus</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">Düşük Stoklu Ürünler</div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün</th>
                                <th>Stok</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var product in Model.LowStockProducts)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.StockQuantity</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-primary w-100 mb-2">Ürünleri Yönet</a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-success w-100 mb-2">Siparişleri Yönet</a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-warning w-100 mb-2">Kullanıcıları Yönet</a>
        </div>
    </div>
</div> 