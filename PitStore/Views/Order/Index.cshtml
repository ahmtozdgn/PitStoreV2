@model IEnumerable<PitStore.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container">
    <h1 class="mb-4">My Orders</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't placed any orders yet. <a asp-controller="Product" asp-action="Index">Start shopping</a>
        </div>
    }
    else
    {
        @foreach (var order in Model)
        {
            <div class="order-card">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Order #@order.Id</h5>
                        <p class="text-muted">Placed on @order.OrderDate.ToString("MMM dd, yyyy")</p>
                        <p><strong>Status:</strong> <span class="badge bg-primary">@order.Status</span></p>
                    </div>
                    <div class="col-md-4 text-end">
                        <p class="cart-total">Total: $@order.TotalAmount.ToString("F2")</p>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div> 