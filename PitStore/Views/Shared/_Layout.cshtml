<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PitStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
    <style>
        body, html {
            font-family: 'Roboto', 'Arial', sans-serif;
            background: #111216;
            color: #f5f5f5;
        }
        .navbar, .footer {
            background: #18191f !important;
        }
        .navbar-brand, .nav-link, .footer {
            color: #fff !important;
        }
        .navbar-brand span {
            font-family: 'Orbitron', 'Roboto', sans-serif;
            color: #e10600 !important;
            font-size: 2rem;
            letter-spacing: 2px;
        }
        .navbar .nav-link.active, .navbar .nav-link:hover {
            color: #e10600 !important;
        }
        .btn-f1, .btn-danger, .btn-primary {
            background: linear-gradient(90deg, #e10600 60%, #b80000 100%);
            border: none;
            color: #fff;
            font-weight: 500;
        }
        .btn-f1:hover, .btn-danger:hover, .btn-primary:hover {
            background: #b80000;
            color: #fff;
        }
        .footer {
            font-size: 0.95rem;
            color: #bbb !important;
            border-top: 2px solid #e10600;
            padding: 1.2rem 0;
        }
        .footer a { color: #e10600; }
        .footer a:hover { color: #fff; }
        @@media (max-width: 768px) {
            .navbar-brand span { font-size: 1.3rem; }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/3/33/F1.svg" alt="PitStore" height="38" class="me-2" />
                    <span>PITSTORE</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Ürünler</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="badge bg-danger cart-count position-absolute top-0 start-100 translate-middle">0</span>
                            </a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0" style="min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-center">
        <div>info@pitstore.com | +90 555 123 4567 | İstanbul, Türkiye</div>
        <div style="margin-top:0.5rem;">&copy; @DateTime.Now.Year PitStore - Tüm hakları saklıdır.</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
